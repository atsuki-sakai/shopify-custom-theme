
<div class="container">
    <h1 class="title">丹波篠山の黒豆について</h1>
    <div class="wrapper">
        <div class="top_image_container">
            <img class="top_image" src={{ section.settings.top_image | img_url: "original" }} loading="lazy" width={700} height={500} alt="top image">
        </div>
    </div>
</div>

{%- style -%}
  .container {
    width: 100%;
    height: 100%;
  }
  .wrapper {
    width:100%;
    max-width: 72rem;
    margin: 0 auto;
    padding: 1rem 2rem;
  }
  .title {
    font-size: 2rem;
    text-align:center;
  }

  .top_image_container {
    position:relative;
    width: 100%;
    height: auto;
    margin: 0 auto;
  }

  .top_image {
    width: 100%;
    height: auto;
    border-radius: 5px;
    overflow: hidden;
  }

{%- endstyle -%}

{% schema %}
  {
    "name": "kuromame-info",
    "settings": [
        {
            "type": "image_picker",
            "id": "top_image",
            "label": "TOP IMAGE"
        }
    ],
    "presets": [
      {
        "name": "Kuromame-info"
      }
    ]
  }
{% endschema %}